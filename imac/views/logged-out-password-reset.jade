extends logged-out-layout
block javascripts
   script(src="/javascripts/create-user")
block content
   div Reset password for: #{username}
   form.password-reset-form(action="/password-reset" method="post")
      input#username(type="hidden" name="username" value=username)
      input#reset-string(type="hidden" name="reset_string" value=reset_string)
      .login-input
         input#password(type="password" name="password" required="true" placeholder="Password")
      .login-input
         input#password-confirm(type="password" name="confirm_password" required="true" placeholder="Confirm Password")
      .messages
         #error-message=error_message
      .in
         input#create-button.blue-button(type="submit" value="Reset Password")
